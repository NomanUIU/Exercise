<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#e1e1e1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnDietChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnIcareCenter"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="28dp"
            android:background="#2196F3"
            android:text="Diet Chart"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnDietChart"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:background="#2196F3"
            android:text="Doctors Profile"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnHealthInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="88dp"
            android:background="#2196F3"
            android:text="Health Info."
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnIcareCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnHealthInfo"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="28dp"
            android:background="#2196F3"
            android:text="iCare Center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnDoctor"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="24dp"
            android:background="#2196F3"
            android:text="My Profile"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:background="#2196F3"
            android:text="About"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Menu"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

</LinearLayout>